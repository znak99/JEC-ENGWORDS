<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customSecondaryWhite"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_add_box_24"
            app:tint="@color/customPrimaryColor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:gravity="end"
            android:text="@string/back"
            android:textSize="14sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/customRed" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:text="単語を追加"
        android:textSize="16sp"
        android:fontFamily="@font/black"
        android:textColor="@color/customSecondaryColor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="英語"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:fontFamily="@font/medium"
        android:textColor="@color/customSecondaryBlack" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:hint="日本語"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:fontFamily="@font/medium"
        android:textColor="@color/customSecondaryBlack" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/main_study"
        android:elevation="10dp"
        android:text="追加"
        android:textSize="14sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/customWhite"
        android:gravity="center"
        android:padding="8dp" />

</LinearLayout>